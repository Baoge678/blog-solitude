.card-widget.card-weather-memphis
  width: 100%
  max-width: 340px
  margin: 0 auto 16px auto
  border-radius: 20px
  overflow: hidden
  padding: 18px 10px 18px 10px
  position: relative
  box-shadow: 8px 8px 0px #FF6B6B
  border: 3px solid #000
  background: #fff
  font-family: 'Arial', sans-serif
  .header
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 12px
    position: relative
    z-index: 1
    .location
      font-size: 1.1rem
      font-weight: bold
      color: #073B4C
      background: #FFD166
      padding: 3px 10px
      border-radius: 10px
      border: 2px solid #000
      box-shadow: 2px 2px 0px #000
    .date-time
      font-size: 0.85rem
      color: #073B4C
      background: #4ECDC4
      padding: 3px 8px
      border-radius: 8px
      border: 2px solid #000
    .refresh-btn
      font-size: 1.2rem
      color: #118AB2
      background: #fff
      border: 2px solid #000
      border-radius: 50%
      width: 28px
      height: 28px
      display: flex
      align-items: center
      justify-content: center
      cursor: pointer
      margin-left: 8px
      transition: background 0.2s
      &:hover
        background: #E2F0CB
  .main-info
    display: flex
    align-items: center
    gap: 10px
    margin-bottom: 10px
    .weather-icon
      font-size: 2rem
      background: white
      width: 40px
      height: 40px
      display: flex
      align-items: center
      justify-content: center
      border-radius: 50%
      border: 2px solid #000
      box-shadow: 2px 2px 0px #000
      font-family: "Segoe UI Emoji", "Apple Color Emoji", "Noto Color Emoji", sans-serif
      font-style: normal !important
    .temperature
      font-size: 2rem
      font-weight: bold
      color: #073B4C
      background: #FF6B6B
      padding: 3px 10px
      border-radius: 12px
      border: 2px solid #000
      box-shadow: 2px 2px 0px #000
    .weather-desc
      color: #073B4C
      font-size: 1rem
      margin-left: 8px
      font-weight: bold
      background: #F4F1DE
      padding: 3px 8px
      border-radius: 8px
      border: 2px solid #000
  .air-quality
    margin-top: 8px
    .air-quality-title
      color: #073B4C
      font-size: 1rem
      font-weight: bold
      background: #FF6B6B
      display: inline-block
      padding: 2px 8px
      border-radius: 8px
      border: 2px solid #000
      box-shadow: 2px 2px 0px #000 
.card-widget.card-weather-memphis .refresh-btn.spin
  animation: spin 0.8s linear
@keyframes spin
  100%
    transform: rotate(360deg) 